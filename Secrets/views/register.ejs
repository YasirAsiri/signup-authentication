<%- include('partials/header') %>
<div class="jumbotron centered">


  <div class="container">
    <div class="login-page">
      <div class="container">
        <div class="row">
          <div class="col-xl-8 m-auto col-sm-8 col-12">
            <div class="log-box">
              <div class="row">
                <div class="col-xl-5 col-sm-5 col-12 nopadding">
                  <div class="logo-back">
                  </div>
                </div>
                <div class="col-xl-7 m-auto col-sm-7 col-12 nopadding">
                  <div class="log-content">
                    <h1>Register</h1>
                    <div class="log-body">
                      <form action="/register" onsubmit="validateForm()" method="POST">
                      <div class="form-group myr-top">
                        <label>Email Address</label>
                        <input type="email" class="form-control" id="username" name="username" placeholder="Email" required>
                      </div>
                      <div class="form-group myr-top">
                        <label>Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                      </div>
                      <div class="form-group myr-top input-icons">
                        <label>Re-enter Password</label>
                        <img id="img-icon">
                        <input type="password" class="form-control left-inner-addon" id="confirm-password" name="confirm-password" placeholder="Re-enter Password" onkeyup="isPasswordMatch()" required>
                      </div>  
                      <div class="btn-lg">
                        <button type="submit" class="btn btn-dark btn-block">Submit</button>
                      </div>  
                      </form>
                      <div class="btn-lg">
                        <a class="btn btn-dark btn-block" href="/auth/google" role="button">
                          <i class="fab fa-google"></i>
                          Sign-up with Google
                        </a>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>